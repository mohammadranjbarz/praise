{
  "name": "api",
  "version": "0.13.0",
  "license": "GPL-3.0-or-later",
  "description": "The Praise REST API running on Node/Express, using MongoDB for storage.",
  "type": "commonjs",
  "main": "dist/index",
  "engines": {
    "node": ">=10.6.0"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "lint": "eslint . --ext .ts",
    "load-env": "env-cmd --silent --no-override -f ../../.env env-cmd --silent --no-override",
    "start": "yarn run migrator up && yarn run load-env ts-node -r tsconfig-paths/register --transpile-only ./src",
    "start:dev": "yarn run migrator up && yarn run load-env nodemon ./src",
    "test": "NODE_ENV=testing && MONGO_DB=praise_db_testing_tmp yarn run migrator up && yarn run load-env nyc --exclude '**/*.spec.ts' mocha -r ts-node/register -r tsconfig-paths/register -r src/tests/setup.ts 'src/tests/**/*.spec.ts' --exit",
    "import-praise": "yarn run load-env ts-node -r tsconfig-paths/register src/scripts/import-praise.ts",
    "not-yet-activated": "yarn run load-env ts-node -r tsconfig-paths/register src/scripts/not-yet-activated.ts",
    "migrator": "yarn run load-env ts-node -r tsconfig-paths/register src/scripts/umzug-cli.ts",
    "drop-database": "yarn run load-env ts-node -r tsconfig-paths/register src/scripts/drop-database.ts"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "exec": "ts-node --files -r tsconfig-paths/register"
  },
  "dependencies": {
    "@awaitjs/express": "^0.9.0",
    "@faker-js/faker": "^7.2.0",
    "@types/express-fileupload": "^1.2.2",
    "@types/mime-types": "^2.1.1",
    "axios": "^0.27.2",
    "bin-packer": "^1.6.1",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "discord.js": "^13.7.0",
    "env-cmd": "^10.1.0",
    "ethers": "^5.5.2",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-fileupload": "^1.3.1",
    "greedy-number-partitioning": "https://github.com/mattyg/greedy-number-partitioning.git",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "json2csv": "^5.0.6",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.34",
    "mongoose": "^6.6.5",
    "mongoose-paginate-ts": "^1.2.7",
    "morgan": "^1.10.0",
    "ses": "^0.17.0",
    "ses-node-json-transform": "^0.1.0",
    "sql.js": "^1.8.0",
    "sqlite": "^4.1.2",
    "sqlite3": "^5.1.2",
    "umzug": "^3.0.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.28",
    "@types/faker": "^5.5.9",
    "@types/json2csv": "^5.0.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.179",
    "@types/mocha": "^9.1.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.0",
    "@types/sql.js": "^1.4.4",
    "@types/supertest": "^2.0.12",
    "@types/yargs": "^17.0.10",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.26.0",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "supertest": "^6.2.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.14.1",
    "tscpaths": "^0.0.9",
    "typescript": "^4.5.4",
    "yargs": "^17.3.1"
  }
}
