{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/activate/*": ["src/activate/*"],
      "@/api-key/*": ["src/api-key/*"],
      "@/auth/*": ["src/auth/*"],
      "@/constants/*": ["src/constants/*"],
      "@/database/*": ["src/database/*"],
      "@/event-log/*": ["src/event-log/*"],
      "@/periods/*": ["src/periods/*"],
      "@/periodsettings/*": ["src/periodsettings/*"],
      "@/praise/*": ["src/praise/*"],
      "@/quantifications/*": ["src/quantifications/*"],
      "@/settings/*": ["src/settings/*"],
      "@/shared/*": ["src/shared/*"],
      "@/utils/*": ["src/utils/*"],
      "@/users/*": ["src/users/*"],
      "@/useraccounts/*": ["src/useraccounts/*"]
    }
  }
}
